// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}




model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  role      EnumRole @default(user)
  image     String?  @default("/person.svg")
  mobile    String?
  address   String?
  status    EnumStatus? @default(active)
  codes     IvacPanelCode[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
enum EnumRole {
  user
  admin
}
enum EnumStatus {
  active
  inactive
}




model IvacPanelCode {
  id        Int      @id @default(autoincrement())
  code      String
  obsfucatedCode String
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model IvacCustomer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  mobile    String?
  address   String?
  status    String   @default("active")
  deviceId String?
  deviceType String?
  userAgent String?
  ipAddress String?
  browser String?
  os String?
  country String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
